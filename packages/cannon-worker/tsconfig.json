{
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "outDir": "lib",
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "removeComments": false,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "incremental": true,
    "typeRoots": [
      "types",
      "node_modules/@types",
    ]
  },
  "exclude": [
    "lib",
    "node_modules"
  ]
}
   

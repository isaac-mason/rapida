{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "baseUrl": ".",
    "lib": ["es2019"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
